<h1>Listing users</h1>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Street address</th>
    <th>Address2</th>
    <th>City</th>
    <th>State province</th>
    <th>Postal code</th>
    <th>Likes</th>
    <th>Admin</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
	<td><%= user.lname %></td>
    <td><%= user.fname %></td>
    <td><%= user.email %></td>
    <td><%= user.street_address %></td>
    <td><%= user.address2 %></td>
    <td><%= user.city %></td>
    <td><%= user.state_province %></td>
    <td><%= user.postal_code %></td>
    <td><%= user.likes %></td>
    <td><%= user.admin %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

